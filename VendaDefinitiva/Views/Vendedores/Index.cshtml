@model IEnumerable<VendaDefinitiva.Models.Vendedor>
@{
    ViewData["Title"] = "Vendedores";
}
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Cadastrar Novo</a>
</p>

<table class="table table-striped table-hover"</table>
<thead>
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDeNascimento)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalarioBase)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modeItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modeItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modeItem => item.DataDeNascimento)
        </td>
        <td>
            @Html.DisplayFor(modeItem => item.SalarioBase)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
            <a asp-action="Deteils" asp-route-id="@item.Id">Detalhes</a>
            <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>

        </td>
    </tr>
            }
</tbody>
<p>Página dos Vendedores</p>