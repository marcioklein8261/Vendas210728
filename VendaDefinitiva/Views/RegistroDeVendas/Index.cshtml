@{
    ViewData["Title"] = "Registro de Vendas";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Início:</label>
                    <div class="col-lg-10">
                        <input type="date" name="Inicial" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Final:</label>
                    <div class="col-lg-10">
                        <input type="date" name="Final" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaDeGrupo">
            <fieldset>
                <legend>Grouping search</legend>
                <div class="form-group">
                    <label for="Inicial" class="col-lg-2 control-label">Inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Final" class="col-lg-2 control-label">Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div> 